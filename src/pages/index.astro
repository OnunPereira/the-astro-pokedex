<Layout title="The Astro PokÃ©dex">
  <ul role="list" class="link-card-grid">
    {
      pokemon?.map(
        (p: {
          name: string;
          stats: {
            base_stat: number;
            effort: number;
            stat: {
              name:
                | "hp"
                | "attack"
                | "defense"
                | "speed"
                | "special-attack"
                | "special-defense";
              url: string;
            };
          }[];
          sprites: { front_default: string };
        }) => (
          <Card
            image={p.sprites.front_default}
            title={p.name}
            stats={p.stats}
            href="#Todo"
          />
        )
      )
    }
  </ul>
</Layout>

<style>
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
